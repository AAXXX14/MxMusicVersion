<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_default_bgIv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@color/material_lightGreen_500" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_default_headerIv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="18dp"
        android:layout_alignBottom="@+id/main_default_bgIv"
        android:layout_marginBottom="38dp"
        android:src="@color/saddlebrown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_default_headerIv"
        android:layout_alignBottom="@+id/main_default_bgIv"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:text="name"
        android:textColor="@color/white" />
</RelativeLayout>