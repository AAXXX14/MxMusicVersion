<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/DefaultActivitySwitchAnimation</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    <style name="DefaultActivitySwitchAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/default_close_exit</item><!--activity 进场动画-->
        <item name="android:activityOpenExitAnimation">@anim/default_open_enter</item><!--activity 尚未销毁 退出动画-->
        <item name="android:activityCloseEnterAnimation">@anim/default_close_enter</item><!--activity 返回动画-->
        <item name="android:activityCloseExitAnimation">@anim/default_close_exit</item><!--fuck-->
    </style>
</resources>